            @if (ViewBag.IsFirstPage)
            {
                <div id="slider">
                    <img src="~/Content/images/Index/banner1.jpg" data-thumb="@Url.Content("~/Content/images/banner1.jpg")">
                    <img src="~/Content/images/Index/banner2.jpg" data-thumb="@Url.Content("~/Content/images/banner2.jpg")">
                    <img src="~/Content/images/Index/banner3.jpg" data-thumb="@Url.Content("~/Content/images/banner3.jpg")">
                </div>
            }
            else
            {
                <div id="slider">
                    <img src="~/Content/images/banner1.jpg">
                </div>
                <script src="~/Scripts/swfobject.js" type="text/javascript"></script>
                <script type="text/javascript">
                    // <![CDATA[
                    var so = new SWFObject("@Url.Content("~/Content/images/banner.swf")", "STYLE ARENA", "980px", "185px", "8", "transparent");
                    so.addParam("quality", "high");
                    so.addParam("salign", "");
                    so.addParam("scale", "noscale");
                    so.addParam("wmode", "transparent");
                    so.addParam("allowScriptAccess", "always");
                    so.addParam("base", ".");
                    so.write("slider");
                    // ]]>
                </script>
            }

        </div><!-- header //-->

        <div id="main">

            @if (!ViewBag.IsFirstPage)
            {
                <ul class="breadCrumb">
                    <li class="s"><a href="~/Index">HOME</a></li>
                    @RenderSection("breadCrumb", false)
                    <li>@ViewBag.Title</li>
                </ul>

